CREATE TABLE CHARACTER
  (
    C_ID       INT,
    C_FN       VARCHAR2(4000),
    C_LS       VARCHAR2(4000),
    C_USERNAME VARCHAR2(4000) UNIQUE NOT NULL,
    C_PASSWORD VARCHAR2(4000) NOT NULL,
    C_Team    INT,
    PRIMARY KEY(C_ID)
  );
/
CREATE TABLE FINISHER
  (
    F_ID       INT,
    C_ID       INT,
    F_ATTACK   VARCHAR2(4000),
    PRIMARY KEY(F_ID),
    FOREIGN KEY(C_ID) REFERENCES CHARACTER(C_ID)
  );
/
CREATE SEQUENCE dragon_seq START WITH 1 INCREMENT BY 1;
CREATE SEQUENCE attack_seq START WITH 1 INCREMENT BY 1;
/
CREATE OR REPLACE TRIGGER dragon_seq_trg BEFORE
  INSERT ON CHARACTER FOR EACH ROW BEGIN IF :new.C_ID IS NULL THEN
  SELECT dragon_seq.NEXTVAL INTO :new.C_ID FROM dual;
END IF;
END;
/
CREATE OR REPLACE TRIGGER attack_seq_trg BEFORE
  INSERT ON FINISHER FOR EACH ROW BEGIN IF :new.F_ID IS NULL THEN
  SELECT attack_seq.NEXTVAL INTO :new.F_ID FROM dual;
END IF;
END;
/
COMMIT;